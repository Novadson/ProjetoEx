
@model Usuario

@using (Html.BeginForm("CadastrarUsuario", "Usuario", FormMethod.Post))
{
    <style>
        .row {
            margin-left: 10px;
            margin-right: 10px;
        }
    </style>
    <div class="panel panel-default  pull-right col-lg-8  col-md-7 col-sm-7 col-xl panelWidth">
        <div class="panel-heading">Cadastro de Usuário</div>

        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" type="text" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" type="text" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" type="text" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Senha, null, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Senha, null, new { @class = "form-control ", placeholder = "Digite uma Senha", type = "password", required = "required", minlength = 6, maxlength = 10 })
                    @Html.ValidationMessageFor(model => model.Senha, null, new { @class = "text-danger" })
                </div>
            </div>


        </div>

        <div class="row">

            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control tel" placeholder="(99)99999-99999" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label class="col-lg-4 col-md-2 control-label" id="labelTOP">Ativar</label>
                    <input name="Status" value="true" type="checkbox" class="option-input checkbox col-lg-2" checked />
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group ">
                    <button id="btnSalvar" onclick="Confirm()" type="Submit" class="btn btn-success"><i class="glyphicon glyphicon-saved"></i>Salvar</button>
                    <a asp-action="UsuariosCadastrados" class="btn btn-info"><i class="glyphicon glyphicon-backward"></i>Voltar</a>
                </div>
            </div>
        </div>

    </div>
    @if (Model != null)
    {
        <input class="none" type="number" value="@Model.Id" name="Id" />
    }
}
@section Scripts{
    <script src="~/js/site.js"></script>
}


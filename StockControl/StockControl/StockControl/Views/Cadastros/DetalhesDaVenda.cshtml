
@{
    ViewData["Title"] = "DetalhesDaVenda";
}

@model Venda

<div class="panel panel-default  pull-right col-lg-8  col-md-7 col-sm-7 col-xl divdlColor panelWidth">
    <div class="panel-heading">Detalhe da Venda</div>

    <dl class="dl-horizontal panel panel-default dlColor">
        <dt class="col-lg-3">
            <label class="control-label">Nome do Cliente:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class="col-lg-3">
            <label class="control-label">Nome do Vendedor:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Funcionario.Nome)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Desc do Produto:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Produto.Descricao)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Preço unitário:</label>
        </dt>

        <dd class="col-lg-3">
            R$ @Html.DisplayFor(model => model.PrecoUnitario)
        </dd>
        <dt class="col-lg-3">
            <label class="control-label">Valor Total da Compra:</label>
        </dt>
        <dd class="col-lg-3">
            R$ @Html.DisplayFor(model => model.ValorTotal)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Qtde de produto:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Comissão:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Comissao)%
        </dd>
    </dl>
    <div class="form-group">
        <a asp-action="VendasCadastradas" class="btn btn-info"><i class="glyphicon glyphicon-backward"></i>Voltar</a>
    </div>
</div>


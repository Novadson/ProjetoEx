@model Cliente

@{
    ViewData["Title"] = "DetalhesDoCliente";
    <!--Autor:Novadson Thelus-->
}

<div class="panel panel-default  pull-right col-lg-8  col-md-7 col-sm-7 col-xl divdlColor panelWidth">
    <div class="panel-heading">Detalhe do Cliente</div>
    <dl class="dl-horizontal panel panel-default dlColor">

        <dt class="col-lg-3">
            <label class="control-label">Nome:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Cpf/Cnpj:</label>
        </dt>

        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.CpfCnpj)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">RG:</label>
        </dt>


        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Rg)
        </dd>


        <dt class="col-lg-3">
            <label class="control-label">Cep:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Cep)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">País:</label>
        </dt>

        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Pais)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Uf:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Uf)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Cidade:</label>
        </dt>

        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Cidade)
        </dd>


        <dt class="col-lg-3">
            <label class="control-label">Bairro:</label>
        </dt>

        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Bairro)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Bairro:</label>
        </dt>

        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Rua)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Número:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Numero)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Celular:</label>
        </dt>

        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Celular)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Email:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Status:</label>
        </dt>
        @if (Model.Status.Equals(true))
        {

            <dd style="margin-left:198px" class="col-lg-3 statusAtivo">
                Ativo
            </dd>
        }
        else
        {
            <dd style="margin-left:198px;" class="col-lg-3 statusInativo">
                <p style="margin-left:-5px">Inativo</p>
            </dd>
        }

    </dl>
    <div class="form-group">
        <a asp-action="ClientesCadastrados" class="btn btn-info"><i class="glyphicon glyphicon-backward"></i>Voltar</a>
    </div>
</div>



@{
    ViewData["Title"] = "CadFornecedor";
    <!--Autor:Novadson Thelus-->
}
@model Fornecedor;

@using (Html.BeginForm("CadastrarFornecedor", "Cadastros", FormMethod.Post))
{
    <style>
        .row {
            margin-left: 10px;
            margin-right: 10px;
        }
    </style>
    <div class="panel panel-default  pull-right col-lg-8  col-md-7 col-sm-7 col-xl panelWidth">
        <div class="panel-heading">Cadastro de Fornecedor</div>

        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label">Nome:</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do Fornecedor" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Cnpj" class="control-label">Cnpj:</label>
                    <input asp-for="Cnpj" class="form-control" data-mask="99.999.999/9999-99" placeholder="99.999.999/9999-99" />
                    <span asp-validation-for="Cnpj" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="TipoEstabelecimento" class="control-label">Tipo de Estabelecimento:</label>
                    <select asp-for="TipoEstabelecimento" class="form-control" required="required">
                        <option selected disabled="disabled">--Selecione o tipo--</option>
                        <option value="Matriz">Matriz</option>
                        <option value="Filial">Filial</option>
                    </select>
                </div>
            </div>

            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Contato" class="control-label">Contato:</label>
                    <input asp-for="Contato" class="form-control" data-mask="(99)9999.9999" placeholder="(99)9999.9999" />
                    <span asp-validation-for="Contato" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="nome@gmail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Cep" class="control-label"></label>
                    <input asp-for="Cep" name="CEP" class="form-control" data-mask="99.999-999" placeholder="99.999-999" />
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Pais" class="control-label">País:</label>
                    <input asp-for="Pais" id="pais" class="form-control" />
                    <span asp-validation-for="Pais" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Uf" class="control-label">UF:</label>
                    <input asp-for="Uf" id="uf" class="form-control" />
                    <span asp-validation-for="Uf" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Cidade" class="control-label">Cidade:</label>
                    <input asp-for="Cidade" id="cidade" class="form-control" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Bairro" class="control-label">Bairro</label>
                    <input asp-for="Bairro" id="bairro" class="form-control" />
                    <span asp-validation-for="Bairro" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Rua" class="control-label"></label>
                    <input asp-for="Rua" id="rua" class="form-control" />
                    <span asp-validation-for="Rua" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label asp-for="Numero" class="control-label">Número:</label>
                    <input asp-for="Numero" class="form-control" />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
            </div>
        </div>
  
        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group ">
                    <button id="btnSalvar" onclick="Confirm()" type="Submit" class="btn btn-success"><i class="glyphicon glyphicon-saved"></i>Salvar</button>
                    <a asp-action="FornecedoresCadastrados" class="btn btn-info"><i class="glyphicon glyphicon-backward"></i>Voltar</a>
                </div>
            </div>

            <div class="col-md-6 col-xs-6">
                <div class="form-group">
                    <label class="col-lg-4 col-md-2 control-label" id="labelTOP">Ativar</label>
                    <input name="Status" value="true" type="checkbox" class="option-input checkbox col-lg-2" checked />
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
    </div>

        <!--Condição para edição-->
        if (Model != null)
        {
        <input type="number" name="Id" class="none" value="@(Model.Id)" />
        }
        }
        <div id="myModal" class="modal-dialog modal-confirm modal fade">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="icon-box">
                        <i class="material-icons">
                            done
                        </i>
                    </div>
                    <h4 class="modal-title">Sucesso!</h4>
                </div>
                <div class="modal-body">
                    <p class="text-center"> Registro Salvo Com Sucesso!</p>
                </div>
                <div class="modal-footer">

                    <a asp-action="FornecedoresCadastrados" class="btn btn-success btn-block">
                        <p class="centromodal">Ok</p>
                    </a>
                </div>
            </div>
        </div>



        @section Scripts{
            <script>


                $('.sucess').on('click', function () {
                    $.dialog({
                        title: 'Text content!',
                        content: 'Simple modal!',
                        buttons: {
                            aRandomButton: function () {
                                // this will be removed.
                            }
                        }
                    });
                });

                $('input[name="CEP"]').blur(function () {
                    var cep = $(this).val().replace(/\D/g, '');
                    if (cep != "") {
                        var validacep = /^[0-9]{8}$/;
                        if (validacep.test(cep)) {
                            $("#pais").val("...");
                            $("#rua").val("...");
                            $("#bairro").val("...");
                            $("#cidade").val("...");
                            $("#uf").val("...");
                            $("#ibge").val("...");
                            $.getJSON("https://viacep.com.br/ws/" + cep + "/json/?callback=?", function (dados) {
                                if (!("erro" in dados)) {
                                    $('#pais').val("Brasil")
                                    $('#pais').attr('readonly', true);
                                    $("#rua").val(dados.logradouro);
                                    $("#rua").attr('readonly', true);
                                    $("#bairro").val(dados.bairro);
                                    $('#bairro').attr('readonly', true);
                                    $("#cidade").val(dados.localidade);
                                    $("#cidade").attr('readonly', true);
                                    $("#uf").val(dados.uf);
                                    $("#uf").attr('readonly', true);
                                    $("#numero").focus();
                                } else {
                                    limpa_formulário_cep();
                                    alert("CEP não encontrado.");
                                };
                            });
                        } else {
                            limpa_formulário_cep();
                            alert("Formato de CEP inválido.");
                        };
                    } else {
                        limpa_formulário_cep();
                    }
                });


            </script>
        }

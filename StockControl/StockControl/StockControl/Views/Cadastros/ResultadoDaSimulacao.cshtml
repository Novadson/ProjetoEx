@model SimularPreco

@{
    ViewData["Title"] = "ResultadoDaSimulacao";
    <!--Autor:Novadson Thelus-->
}

<div class="panel panel-default  pull-right col-lg-8  col-md-7 col-sm-7 col-xl divdlColor panelWidth">
    <div class="panel-heading">Resultado da Simulação</div>
    <dl class="dl-horizontal panel panel-default dlColor">

        <dt class="col-lg-3">
            <label class="control-label">Preço de Compra:</label>
        </dt>
        <dd class="col-lg-3 text-danger">
            R$@Html.DisplayFor(model => model.PrecoCompra)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Margem de Lucro:</label>
        </dt>
        <dd class="col-lg-3 text-danger">
            @Html.DisplayFor(model => model.MargeLucro)%
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Preço de Venda:</label>
        </dt>
        <dd class="col-lg-3 text-danger">
            R$@Html.DisplayFor(model => model.PrecoVenda)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Lucro:</label>
        </dt>
        <dd class="col-lg-3 text-danger">
            R$@Html.DisplayFor(model => model.Lucro)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Margem bruta:</label>
        </dt>
        <dd class="col-lg-3 text-danger">
            @Html.DisplayFor(model => model.MargemBruta)%
        </dd>
    </dl>
    <div class="row">
        <div class="col-md-6 col-xs-6">
            <div class="form-group ">
                <a asp-action="SimularPreco" class="btn btn-success">
                    <i class="glyphicon glyphicon-usd"></i>Nova Simulação
                </a>
                <a asp-action="ProdutosCadastrados" class="btn btn-info"><i class="glyphicon glyphicon-backward"></i>Voltar</a>
            </div>
        </div>
    </div>
</div>



@{
    ViewData["Title"] = "FuncionariosCadastrados";
    <!--Autor:Novadson Thelus-->
}

@model List<Funcionario>;

<div class="panel panel-default  col-lg-8  col-md-7 col-sm-7 col-xl divdlColor panelWidth">
    <div class="panel-heading">
        Funcionários Cadastrados
        <a asp-action="CadFuncionario" class="btn btn-success pull-right center-block btnNovoRegistro">
            <i class="glyphicon glyphicon-plus"></i>Novo registro
        </a>
        <br />
        <br />
        <div class="form-group input-group" style="margin-bottom:-5px;">
            <span class="input-group-addon"><i class="glyphicon glyphicon-search colorIconEditar"></i></span>
            <input id="myInput" placeholder="Buscar Funcionário por nome." type="text" class="form-control">
        </div>
    </div>
    <table id="myTable"  class="table table-bordered table-condensed  table-responsive tablebgColor">
        <thead class="tabelaHeaderColor">
            <tr>
                <td>Nome</td>
                <td>Ocupação</td>
                <td>Cpf</td>
                <td>Email</td>
                <td>Contato</td>
                <td>Status</td>
                <td style="text-align:center" colspan="3">Ações</td>
            </tr>
        </thead>

        @foreach (var funcionario in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => funcionario.Nome)
                </td>

                <td>
                    @Html.DisplayFor(model => funcionario.Ocupacao)
                </td>
                <td>
                    @Html.DisplayFor(model => funcionario.Cpf)
                </td>

                <td>
                    @Html.DisplayFor(model => funcionario.Email)
                </td>

                <td>
                    @Html.DisplayFor(model => funcionario.Celular)
                </td>
                @if (funcionario.Status.Equals(true))
                {
                    <td>
                        <div class="statusAtivo">
                            Ativo
                        </div>
                    </td>
                }
                else
                {
                    <td>
                        <div class="statusInativo">
                            Inativo
                        </div>
                    </td>
                }

                <td>
                    <a title="Editar" href="@Url.Action("EditarFuncionario",new { id =funcionario.Id})"><i class="glyphicon glyphicon-edit colorIconEditar"></i></a>
                </td>

                <td>
                    <a title="Detalhes" href="@Url.Action("DetalhesDoFuncionario",new { id =funcionario.Id})"><i class="glyphicon glyphicon-info-sign colorIconEditar"></i></a>
                </td>

                <td>
                    
                    <a  onclick = "return confirm('Deseja excluir esse Funcionario?');"
                       title="Excluir" href="@Url.Action("ExcluirFuncionario",new { id =funcionario.Id})"><i class="glyphicon glyphicon-trash  colorIcon"></i></a>
                </td>
            </tr>
        }
    </table>
    <br />
    @if (Model.Count().Equals(0))
    {
        <span class="msmEmptyTable">
            Não há Funcionario cadastrado...
        </span>
    }
</div>

@section Scripts{
    <script src="~/js/site.js"></script>
}

@model Funcionario

@{
    ViewData["Title"] = "DetalhesDoFuncionario";
    <!--Autor:Novadson Thelus-->
}
<div class="panel panel-default  pull-right col-lg-8  col-md-7 col-sm-7 col-xl divdlColor panelWidth">
    <div class="panel-heading">Detalhe do Funcionário</div>
    <dl class="dl-horizontal panel panel-default dlColor">
        <dt class="col-lg-3">
            <label class="control-label">Nome:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Número da Matrícula:</label>
        </dt>

        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.NumeroMatricula)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Data de Nascimento:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Gênero:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Genero)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Cpf:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Cpf)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Rg:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Rg)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Email:</label>
        </dt>

        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Contato:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Celular)
        </dd>
        <dt class="col-lg-3">
            <label class="control-label">Ocupação:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.Ocupacao)
        </dd>

        <dt class="col-lg-3">
            <label class="control-label">Grau de Escola:</label>
        </dt>
        <dd class="col-lg-3">
            @Html.DisplayFor(model => model.GrauEscolaridade)
        </dd>
        <dt class="col-lg-3">
            <label class="control-label">Status:</label>
        </dt>
        @if (Model.Status.Equals(true))
        {

            <dd style="margin-left:198px" class="col-lg-3 statusAtivo">
                Ativo
            </dd>
        }
        else
        {
            <dd style="margin-left:198px;" class="col-lg-3 statusInativo">
                <p style="margin-left:-5px">Inativo</p>
            </dd>
        }
    </dl>
    <div class="form-group">
        <a asp-action="FuncionariosCadastrados" class="btn btn-info"><i class="glyphicon glyphicon-backward"></i>Voltar</a>
    </div>
</div>
